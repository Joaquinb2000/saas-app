<h1>Invite New Member</h1>

<%= form_with( @member ) do |f| %>
  <div class="container">
    <% if @member.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><% pluralize(@member.errors.count, 'error') %> prohibited this Member from being saved</h3>
      </div>
      <div class="panel-body">
        <ul>
          <%= @member.errors.full_messages do |msg|%>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <%= fields_for( :user ) do |w|%>
      <div class="form-group">
        <%= w.label :email %>
        <%= w.text_field :email, class: "form-control"%>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-5 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-5">
        <div class="form-group">
          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name, class: "form-control"%>
        </div>
      </div>
    </div>
  </div>
  <div class="form-control">
    <button class ="btn btn-primary" type="submit">
      Create user and invite
    </button>
  </div>
<% end %>
